apiVersion: v1
kind: Secret
type: kubernetes.io/tls
metadata:
  name: collector-osv-tls
data:
  tls.crt: "{{ tpa_single_node_collector_osv_tls_cert_pem | b64encode }}"
  tls.key: "{{ tpa_single_node_collector_osv_tls_cert_key | b64encode }}"
{% if tpa_single_node_collector_osv_tls_client_cert_crt is defined %}
  "service-ca.crt": "{{ tpa_single_node_collector_osv_tls_client_cert_crt | b64encode }}"
{% endif %}
